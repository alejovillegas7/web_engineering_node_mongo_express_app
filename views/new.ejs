<body>
    <h1>Add a new student!</h1>
    <form action="/students" method="POST">
        <input type="text" name="name" placeholder="Name" required>
        <input type="text" name="lastName" placeholder="Lastname" required>
        <input type="number" name="age" placeholder="Age" min="15" required>
        <input type="number" step="0.01" name="finalGrade" placeholder="final Grade" min="0" max="5" required>
        <button>Submit!</button>
    </form>
    <a href="/students">go back to the list</a>
</body>
</html>